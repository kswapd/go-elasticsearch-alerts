{
  "name": "alarm_test",
  "index": "alarm_test",
  "schedule": "@every 2m",
  "body": {
      "query": {
        "bool": {
          "must": [
            { "term" : { "log_type" : { "value" : "warning" } } }
          ],
          "filter": [
            { "range" : { "log_time" : { "gte" : "now-2m/m" } } }
          ]
        }
      },
      "size": 20,
      "sort": [
        { "log_time": "desc" }
      ]
  },
  "conditions": [
    {
      "field": "hits.hits._source.log_value",
      "quantifier": "any",
      "gt": 20
    }
  ],
  "outputs": [
    {
      "type": "file",
      "config": {
        "file": "/dev/stdout"
      }
    }
  ]
}